<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#8F8F8F"
                android:dashGap="5dp"
                android:dashWidth="5dp" />
            <padding
            android:bottom="5dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp" />

            <solid android:color="#00FFFFFF" />

        </shape>
    </item></layer-list>